{% comment %} map section {% endcomment %}

<div>
  <div
    class=" bg-no-repeat bg-cover py-[90px]"
    style="background-image: url({{ section.settings.map_background | img_url: "original" }})"
  >
    <div class="grid grid-cols-2 tablet:grid-cols-1 gap-10 container m-auto items-center tablet:px-3">
      <div class="max-w-[648px] text-center tablet:max-w-full">
        <h2 class="section-title pb-5">{{ section.settings.map_title }}</h2>
        <div class="section-content">
          {{ section.settings.map_description }}
        </div>
      </div>
      <div>
        <iframe
          src="{{ section.settings.map_link }}"
          width="100%"
          height="450"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Map Section",
  "settings": [
    {
      "type": "text",
      "id": "map_title",
      "label": "Title",
      "default": "Stop by for a visit at our boutique store"
    },
    {
      "type": "text",
      "id": "map_description",
      "label": "Description",
      "default": "We have this little Montreal cozy store, hey we dont bite! Come say hi!!"
    },
    {
      "type": "text",
      "id": "map_link",
      "label": "Map LInk (iframe)",
      "default": "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d369110.4158473942!2d-79.95232726694726!3d43.71730014289388!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4cb90d7c63ba5%3A0x323555502ab4c477!2sToronto%2C%20ON%2C%20Canada!5e0!3m2!1sen!2sbd!4v1666895295601!5m2!1sen!2sbd"
    },
    {
      "type": "image_picker",
      "id": "map_background",
      "label": "Backgrond Image"
    }
  ],

  "presets": [
    {
      "name": "Map Section"
    }
  ]
}
{% endschema %}
